{
  "editor.smoothScrolling": true,
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontLigatures": true,
  // "editor.fontFamily": "'Fira Code'",
  "editor.fontFamily": "'JuliaMono'",
  // "editor.fontFamily": "'IBM Plex Mono'",
  "editor.cursorBlinking": "smooth",
  "editor.fontWeight": "400",
  "editor.suggest.preview": true,
  "editor.lineHeight": 27,
  "editor.bracketPairColorization.enabled": true,
  // "editor.letterSpacing": 0.3,
  "editor.minimap.enabled": false,
  "editor.rulers": [
    {
      "column": 80,
      "color": "#4f545a40"
    }
  ],
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  // "editor.guides.bracketPairs": true,
  "editor.cursorWidth": 1,
  "editor.cursorSurroundingLines": 8,
  "editor.insertSpaces": false,
  "editor.lineNumbers": "relative",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "files.trimTrailingWhitespace": true,
  // workbench configs
  "workbench.iconTheme": "bearded-icons",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.wrapTabs": false,
  "workbench.editor.decorations.badges": true,
  "breadcrumbs.enabled": false,
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "statusBar.background": "#292929",
      "statusBar.noFolderBackground": "#242424",
      "statusBar.debuggingBackground": "#263238",
      "activityBar.background": "#242424"
    },
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment"
        ],
        "settings": {
          "fontStyle": "italic"
        },
      },
    ]
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.automaticKeyboardNavigation": false,
  // terminal configs
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.cursorBlinking": true,
  // "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "terminal.integrated.tabs.enabled": true,
  // formatter configs
  "prettier.eslintIntegration": true,
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true,
    // "editor.fontFamily": "'SF Mono'",
    // "editor.fontFamily": "'Cascadia Code'",
    // "editor.fontFamily": "'IBM Plex Mono'",
    "editor.fontFamily": "'Fira Code'",
    // "editor.fontFamily": "'JuliaMono'",
    // "editor.fontFamily": "'IBM Plex Sans'",
    // "editor.fontFamily": "'Jetbrains Mono'",
    // "editor.letterSpacing": 0.5,
    // "editor.fontFamily": "'Fira Sans'",
    // "editor.fontWeight": "500",
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": [
      "document"
    ],
  },
  // Vim Configs
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<Space>",
  "vim.easymotion": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "J"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "K"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    {
      "before": [
        "<Leader>",
        "j"
      ],
      "after": [
        "J"
      ]
    },
    {
      "before": [
        "<C-h>"
      ],
      "after": [
        "<C-w>",
        "h"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "<C-w>",
        "j"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "<C-w>",
        "k"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "after": [
        "<C-w>",
        "l"
      ]
    },
    {
      "before": [
        "<tab>"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ]
    },
    {
      "before": [
        "<S-tab>"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [
        "<Leader>",
        "t",
        "t"
      ],
      "commands": [
        ":tabnew"
      ]
    },
    {
      "before": [
        "<Leader>",
        "t",
        "o"
      ],
      "commands": [
        ":tabo"
      ]
    },
    {
      "before": [
        "<Leader>",
        "t",
        "q"
      ],
      "commands": [
        ":tabclose"
      ]
    },
    {
      "before": [
        "<leader>",
        "e",
        "e"
      ],
      "commands": [
        "workbench.action.toggleSidebarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "e",
        "a"
      ],
      "commands": [
        "workbench.action.toggleActivityBarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "e",
        "q"
      ],
      "commands": [
        "workbench.action.toggleStatusbarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        "workbench.action.terminal.toggleTerminal"
      ]
    },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        ":w"
      ]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<ESC>"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "J"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    },
    {
      "before": [
        "K"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    {
      "before": [
        "<Leader>",
        "j"
      ],
      "after": [
        "J"
      ]
    }
  ],
  // telementary
  "telemetry.telemetryLevel": "off",
  // misc
  "material-icon-theme.showWelcomeMessage": false,
  "svg.preview.mode": "svg",
  // "workbench.colorCustomizations": {
  //   "[One Dark Pro]": {
  //     "statusBar.background": "#2e2e2e",
  //     "editor.background": "#2e2e2e"
  //   }
  // },
  "window.menuBarVisibility": "toggle",
  "workbench.sideBar.location": "right",
  "editor.inlineSuggest.enabled": true,
  // "javascript.inlayHints.parameterNames.enabled": "all",
  // "typescript.inlayHints.parameterNames.enabled": "all",
  "github.copilot.enable": {
    "*": true,
  },
  "cSpell.enableFiletypes": [
    "!handlebars",
    "!haskell",
    "!latex",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala"
  ],
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.productIconTheme": "icons-carbon",
  "chaliceIcons.showArrows": true,
  "workbench.colorTheme": "Bearded Theme Arc EolStorm",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true
  }
}